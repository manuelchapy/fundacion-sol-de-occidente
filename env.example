# Variables de entorno para Fundación Sol de Occidente
# Copia este archivo como .env.local y configura tus valores

# Configuración de la aplicación
NEXT_PUBLIC_APP_NAME="Fundación Sol de Occidente"
NEXT_PUBLIC_APP_DESCRIPTION="Fundación dedicada al desarrollo social y comunitario en el estado Táchira, Venezuela"
NEXT_PUBLIC_APP_URL="https://tu-dominio.vercel.app"

# Configuración de contacto
NEXT_PUBLIC_CONTACT_EMAIL="contacto@fundacionsoldeoccidente.org"
NEXT_PUBLIC_CONTACT_PHONE="+58-XXX-XXXXXXX"
NEXT_PUBLIC_CONTACT_ADDRESS="San Cristóbal, Estado Táchira, Venezuela"

# Configuración de redes sociales
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/fundacionsoldeoccidente"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/fundacionsoldeoccidente"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/fundacionsoldeoccidente"

# Configuración de Google Analytics (opcional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Configuración de Google Maps (opcional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="tu-api-key-aqui"

# Configuración de email (para formularios de contacto)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-password-de-aplicacion"
SMTP_FROM="noreply@fundacionsoldeoccidente.org"

# Configuración de base de datos (si necesitas una)
DATABASE_URL="postgresql://usuario:password@host:puerto/database"

# Configuración de autenticación (si implementas login)
NEXTAUTH_URL="https://tu-dominio.vercel.app"
NEXTAUTH_SECRET="tu-secret-super-seguro-aqui"
